#:kivy 1.8.0
#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

WeatherRoot:

<WeatherRoot>:
	AddLocationForm

<AddLocationForm>: 

	orientation: "vertical"
	search_results: search_results_list
	search_input: search_box # Use id and connect to property from main.py
	check_box: ch_box


	BoxLayout:
		height: "40dp"
		size_hint_y: None
		
		TextInput:
			id: search_box 	# set id to be refenced elsewhere in kvlang file
			size_hint_x: 50
			multiline: False
			focus: True
			hint_text: "Enter a city"
			on_text_validate: root.search_location()
			
		BoxLayout:
			orientation: "vertical"
			size_hint_x: 10
			Label:
				text: "GPS"
							
			CheckBox:
				id: ch_box
				active: False
					
		Button:
			text: "Search"
			size_hint_x: 20
			on_press: root.search_location()	# event handler on press/click
		Button:
			text: "Current Location"
			size_hint_x: 20

	ListView:
		id: search_results_list
		adapter:
			ListAdapter(data=[],
					    cls=main.LocationButton,
					    args_converter=root.args_converter) # root refers to AddLocationForm
	Button:
		text: "Cancel"
		height: "40dp"
		size_hint_y: None
		on_press: app.root.show_current_weather(None)

<CurrentWeather@BoxLayout>:
	location: ['New York', 'US']
	conditions: None
	temp: None
	temp_min: None
	temp_max: None
	orientation: "vertical"
	
	BoxLayout:
		orientation: "vertical"
		BoxLayout:
			Label:
				text: "{} ({})".format(root.location[0], root.location[1])
			Label:
				text: "Current Temp"
		BoxLayout:
			Label:
				text: "High / Low"
			Label:
				text:"Current Conditions"
	
	BoxLayout:
		orientation: "horizontal"
		size_hint_y: None
		height: "40dp"
		Button:
			text: "Add Location"
			on_press: app.root.show_add_location_form()
		Button:
			text: "Forecast"

<LocationButton>:
	text: "{} ({})".format(self.location[0], self.location[1])
	height: "40dp"
	size_hint_y: None
	on_press: app.root.show_current_weather(self.location)
		
