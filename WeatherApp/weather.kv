#:kivy 1.8.0
#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

WeatherRoot:

<WeatherRoot>:
	AddLocationForm

<AddLocationForm>: 
	orientation: "vertical"
	search_results: search_results_list
	search_input: search_box # Use id and connect to property from main.py
	check_box: ch_box
	BoxLayout:
		height: "40dp"
		size_hint_y: None	
		TextInput:
			id: search_box 	# set id to be refenced elsewhere in kvlang file
			size_hint_x: 50
			multiline: False
			focus: True
			hint_text: "Enter a city"
			on_text_validate: root.search_location()			
		BoxLayout:
			orientation: "vertical"
			size_hint_x: 10
			Label:
				text: "GPS"
							
			CheckBox:
				id: ch_box
				active: False					
		Button:
			text: "Search"
			size_hint_x: 20
			on_press: root.search_location()	# event handler on press/click
		Button:
			text: "Current Location"
			size_hint_x: 20
	ListView:
		id: search_results_list
		adapter:
			ListAdapter(data=[],cls=main.LocationButton,args_converter=root.args_converter) # root refers to AddLocationForm
	Button:
		text: "Cancel"
		height: "40dp"
		size_hint_y: None
		on_press: app.root.show_current_weather(None)

<CurrentWeather>:	
	orientation: "vertical"
	conditions: conditions
	BoxLayout:			
		Label:
			text: "{} ({})".format(root.location[0], root.location[1])
			font_size: "30dp"
		Label:
			text: "{}".format(root.temp)
	BoxLayout:
		id: conditions
	BoxLayout:
		Label:
			text: "Low: {}".format(root.low_temp)
		Label:
			text: "High: {}".format(root.hi_temp)
	
	BoxLayout:
		orientation: "horizontal"
		size_hint_y: None
		height: "40dp"
		Button:
			text: "Add Location"
			on_press: app.root.show_add_location_form()
		Button:
			text: "Forecast"

<LocationButton>:
	text: "{} ({})".format(self.location[0], self.location[1])
	height: "40dp"
	size_hint_y: None
	on_press: app.root.show_current_weather(self.location)
# Dynamic widgets below
<UnknownConditions@BoxLayout>:
	conditions: ""
	canvas:
		Color:
			rgb: [0.2, 0.2, 0.2]
		Ellipse:
			pos: self.pos
			size: self.size
	Label:
		text: root.conditions
		
<ClearConditions@BoxLayout>:
	conditions: ""
	canvas:
		Color:
			rgb: [0.8, 0.7, 0.3]
		# Lines for the sun radixes
		Line:
			cap: "round"
			width: 3
			# Horizontal line
			points: 
				[self.center_x - (self.height / 2),
				self.center_y,
				self.center_x + (self.height / 2),
				self.center_y]
		Line:
			cap: "round"
			width: 3
			# Vertical line
			points: 
				[self.center_x,
				self.center_y - (self.height /2),
				self.center_x,
				self.center_y + (self.height / 2)]
		Line:
			cap: "round"
			width: 3
			# 45 degree line (left leaning)
			points: 
				[self.center_x - (self.height * 0.35355),
				self.center_y - (self.height * 0.35355),
				self.center_x + (self.height * 0.35355),
				self.center_y + (self.height * 0.35355)]
		Line:
			cap: "round"
			width: 3
			# 45 degree line (right leaning)
			points: 
				[self.center_x - (self.height * 0.35355),
				self.center_y + (self.height * 0.35355),
				self.center_x + (self.height * 0.35355),
				self.center_y - (self.height * 0.35355)]
		Color:
			rgb: [0.6, 0.5, 0.0]
		Ellipse:
			pos: self.center_x - ((self.height - 40) / 2), self.pos[1] + 20
			size: [self.height - 40, self.height - 40]
	Label:
		text: root.conditions